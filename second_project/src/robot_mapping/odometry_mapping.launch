<launch>
	<param name="/use_sim_time" value="true"/>

	<node pkg="tf2_ros" type="static_transform_publisher" name="tf_link_camera"
		  args="0 0 0  0 0 0 1  odom camera_odom_frame"/>
	<node pkg="tf2_ros" type="static_transform_publisher" name="tf_link_sensor"
		  args="-0.675 -0.008 0.96  0 0 0  base_link os1_sensor"/>

	<!--converts the cloudpoints to laserscan-->
	<include file="$(find robot_mapping)/node/laserscan.xml"/>
	
	<include file="$(find robot_mapping)/node/sensors_fusion.xml"/>

	<include file="$(find robot_mapping)/node/gmapping.xml">
		<arg name="base_frame" value="base_link"/>
		<arg name="odom_frame" value="odom"/>
	</include>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find robot_mapping)/rviz/odometric.rviz"/>

	<node pkg="rosbag" type="play" name="player"
		  args="--clock -u 240 $(find robot_mapping)/bag/2020-05-14-16-09-36-traj1-os1-t265-pix.bag"/>
</launch>